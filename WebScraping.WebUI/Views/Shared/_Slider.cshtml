@using WebScraping.WebUI.ViewModel
@model ItemViewModel

@section styles
{
    <style>
    </style>
}


<div id="carouselExampleIndicators" class="carousel slide text-center mt-5 border" data-ride="carousel">
    <h5 class="h2 text-primary mb-5">Çok satan kitaplar</h5>
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner mb-5">
        <div class="carousel-item active">

            <div class="row">
                @foreach (var book in Model.Books.Take(6).ToList())
                {
                    <div class="col-md-2 col-sm-12">
                        <a href="#">
                            <img src="@book.Image" alt="Image" style="max-width: 100%;">
                        </a>
                    </div>
                }

            </div>

            <!--.row-->
        </div>

        <div class="carousel-item">
            <div class="row">
                @foreach (var book in Model.Books.Skip(6).Take(6).ToList())
                {
                    <div class="col-md-2 col-sm-12">
                        <a href="#">
                            <img src="@book.Image" alt="Image" style="max-width: 100%;">
                        </a>
                    </div>
                }
            </div>

            <!--.row-->
            <!--</div>-->
            <!--.item-->
            <!--</div>-->
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>
    </div>
</div>





