@using WebScraping.Entities
@model List<Book>

<div class="top-content">
    <div class="container-fluid">
        <div id="carousel-example" class="carousel slide text-center" data-ride="carousel">
            <h5 class="h2 text-primary mb-5">Çok satan kitaplar</h5>
            <div class="carousel-inner row w-100 mx-auto" role="listbox">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-2 @(i == 0 ? "active" : "")">
                        <a href="@Model[i].BookDetailUrl" target="_blank">
                            <img src="@(Model[i].Image)" class="img-fluid mx-auto d-block img" style="margin-left: 50% !important;left: 0" alt="img">
                        </a>
                    </div>
                }

            </div>
            <a class="carousel-control-prev" href="#carousel-example" role="button" data-slide="prev" style="top: 40%;">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel-example" role="button" data-slide="next" style="top: 40%;">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>






